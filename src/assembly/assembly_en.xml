<assembly>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*-jar-with-dependencies.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/resources/i18n</directory>
            <outputDirectory>/i18n</outputDirectory>
            <includes>
                <include>*.properties</include>
            </includes>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source>task_en.json</source>
            <outputDirectory>/</outputDirectory>
            <destName>task.json</destName>
        </file>
        <file>
            <source>README_en.md</source>
            <outputDirectory>/file</outputDirectory>
            <destName>README.md</destName>
        </file>
        <file>
            <source>images/logo.png</source>
            <outputDirectory>/file</outputDirectory>
        </file>
    </files>

</assembly>